<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_holder_historial"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:padding="8dp"
            android:src="@drawable/logotipo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <TextView
                android:id="@+id/item_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Fecha: " />

            <TextView
                android:id="@+id/item_profesor_asignado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Profesor: " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <TextView
                android:id="@+id/fecha_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp" />

            <TextView
                android:id="@+id/profesor_asignado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_hora_reserva"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:foregroundTint="#00D12424"
            android:gravity="center"
            android:text="Hora" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>